.my {
  position: relative;
}

.my-head {
  width: 100%;
  background: #1296db;
  position: relative;
  display: flex;
  flex-direction: column;
}

.head-user{
  width: 100%;
  height: 100px;
  display: flex;
  align-items: center;
  padding: 20px;
}

.head-name{
  width: 100%;
  height: 44px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  font-weight: bold;
  font-size: 16px;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 1px solid #dfdfdf;
  margin-right: 20px;
}

.userinfo {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.userinfo text {
  font-weight: bold;
  margin: 5rpx 0;
}

.service-list{
  background: #ffffff;
  margin-top: 10px;
}

.list{
  width: 100%;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px;
  border-bottom: 1px solid #dfdfdf;
}

.list .list-name{
  display: flex;
  align-items: center;
}

.list .list-name image {
  width: 15px;
  height: 15px;
  margin-right: 10px;
}

.list image{
  width: 10px;
  height: 10px;
}