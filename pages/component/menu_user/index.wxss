.menuhome {
  position: relative;
  padding-bottom: 150rpx;
}

.select {
  background: rgba(255, 255, 255, .6);
  position: absolute;
  left: 20rpx;
  top: 110rpx;
  z-index: 99;
  border-radius: 20rpx;
  padding: 0 10rpx;
}

swiper {
  height: 500rpx;
}

.swipercon {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.swipercon>image {
  width: 100%;
  height: 100%;
}

.catlist {
  display: flex;
  flex-wrap: wrap;
}

.catlist>.item-list {
  position: relative;
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 35rpx;
  box-sizing: border-box;
}

.item-list-img {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  overflow: hidden;
}

.item-list-new {
  position: absolute;
  width: 20px;
  height: 20px;
  top: 15px;
  left: 15px;
}

.catlist>.item-list>text {
  margin-top: 10rpx;
  font-size: 26rpx
}