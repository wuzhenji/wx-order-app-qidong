.order{
  width: 100%;
  height: 100vh;
  font-size: 13px;
  position: relative;
  background: #ffffff;
}
.order-top{
  width: 100%;
  display: flex;
  flex-direction: column;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  background: #ffffff;
}
.order-top .head-name{
  width: 100%;
  height: 44px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  font-size: 16px;
  font-weight: bold;
}

.head-type{
  display: flex;
  align-items: center;
  width: 100%;
  height: 30px;
  padding: 5px 10px;
}

.head-type .picker{
  border: 1px solid #dddddd;
  padding: 0 3px;
  max-width: 100px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.head-input{
  width: 100%;
  height: 40px;
  display: flex;
  align-items: center;
  padding: 10px;
}

.head-input .input-text{
  margin-left: 5px;
}

.head-search{
  width: 100%;
  height: 60px;
  display: flex;
  align-items: center;
  font-size: 13px;
}

.search-scan{
  width: 60px;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-scan image{
  width: 50px;
  height: 50px;
}

.search-filter{
  flex: 1;
  height: 60px;
  padding-right: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.search-filter .picker{
  border: 1px solid #dddddd;
  padding: 0 3px;
  max-width: 100px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.picker-date{
  width: 90px;
}

.sendswitch{
  zoom: 0.6;
}

.filter-state .name{
  margin-left: 5px;
}

.filter-date{
  width: 100%;
  display: flex;
  align-items: flex-end;
}

.filter-date text{
  margin: 0 5px;
}

.filter-date .clear{
  color: #1a7af8;
}

.filter-state{
  display: flex;
}

.filter-search{
  display: flex;
}

.num-text{
  margin-left: 10px;
}

.num-input{
  width: 90px;
  border: 1px solid #dddddd;
  padding-left: 5px;
}

.searchbtn{
  background: #1a7af8;
  color: #ffffff;
  font-size: 13px;
  padding: 0 5px;
  margin-left: 5px;
  border-radius: 2px;
}

.order-content{
  width: 100%;
  padding-right: 10px;
  padding-left: 10px;
  padding-bottom: 75px;
  background: #ffffff;
}

.order-list{
  width: 100%;
  height: 90px;
  border-radius: 5px;
  box-shadow: 0 0 5px rgba(0, 0, 0, .2);
  margin-bottom: 10px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.order-list.complate{
  /* color: #ffffff; */
  /* background: #1a7af8; */
  box-shadow: 0 0 5px rgba(26, 122, 248, .8);
}

.order-list .line{
  width: 100%;
  padding: 3px 10px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.line .line-state {
  font-weight: bold;
  font-size: 14px;
}

.line text:first-child{
  width: 70%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.line text:last-child{
  width: 30%;
  text-align: right;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.nodata{
  width: 100%;
  text-align: center;
  margin: 20px 0;
}