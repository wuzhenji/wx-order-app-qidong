.productinfo {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  background: rgba(0, 0, 0, .5);
  z-index: 11;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.productinfo .productinfo-content {
  width: 650rpx;
  height: 400rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx;
}

.productinfo-content image {
  width: 100%;
  height: 100%;
}

.productinfo .closeicon{
  margin-top: 80rpx;
  width: 60rpx;
  height: 60rpx;
}