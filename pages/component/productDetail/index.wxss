.productinfo {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  background: rgba(0, 0, 0, .5);
  z-index: 11;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.productinfo .productinfo-content {
  width: 650rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 0 40rpx 40rpx;
}

.productinfo .productinfo-content .content-name {
  font-size: 20px;
  font-weight: bold;
  margin: 30rpx 0;
}

.productinfo .productinfo-content .swipercon{
  width: 100%;
  height: 100%;
}

.swipercon>image{
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.productinfo .productinfo-content .content-line {
  font-size: 11px;
  margin-top: 14rpx;
}

.productinfo .closeicon{
  margin-top: 80rpx;
  width: 60rpx;
  height: 60rpx;
}