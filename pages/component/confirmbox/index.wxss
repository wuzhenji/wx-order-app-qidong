.confirmbox{
  position: fixed;
  width: 300px;
  height: 150px;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 999;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  border: 1px solid #cccccc;
  border-radius: 5px;
  background: #000000;
}

.confirmbox text{
  flex: 1;
  font-size: 16px;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.confirmbox .btn{
  width: 100%;
  height: 40px;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-top: 1px solid #cccccc;
}