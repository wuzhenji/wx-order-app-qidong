.store {
  height: 100vh;
}
.store-head{
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}
.head-bg{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
  left: 0;
  top: 0;
}
.store .head-name{
  width: 100%;
  height: 44px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.store-head .head-name image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 20rpx;
}
.store-bg {
  width: 100%;
  height: 300rpx;
}

.head-info {
  width: calc(100% - 60rpx);
  height: 100rpx;
  margin: 0 auto;
  background: rgba(255, 255, 255, .5);
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  padding: 0 40rpx;
  box-sizing: border-box;
  position: relative;
}

.head-info .search {
  width: 110rpx;
  height: 40rpx;
  position: absolute;
  right: 40rpx;
  border-radius: 30rpx;
  background: #999999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.head-info .search image {
  width: 30rpx;
  height: 30rpx;
}

.head-info .storelogo {
  width: 80rpx;
  height: 80rpx;
  margin-right: 40rpx;
  border-radius: 50%;
  overflow: hidden;
}

.store-product {
  width: 100%;
  height: calc(100% - 300rpx);
  display: flex;
  padding-bottom: 100rpx;
}

.product-left {
  width: 200rpx;
  height: 100%;
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow-y: auto;
  border-right: 1px solid #dfdfdf;
}

.product-left view {
  width: 100%;
  min-height: 90rpx;
  max-height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #666666;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.product-left view.selected {
  color: #000000;
}

.product-right {
  flex: 1;
  height: 100%;
  padding-top: 10px;
  display: flex;
  flex-wrap: wrap;
  align-self: flex-start;
  align-content: flex-start;
  overflow: hidden;
  overflow: scroll;
}

.item {
  width: 50%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.item .item-cover {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  top: 0;
  z-index: 1;
  background: rgba(255, 255, 255, .6)
}

.item .item-cover .cover-starttime {
  width: 200rpx;
  height: 30rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  border-radius: 10px 10px 0 0;
  background: #ff0000;
  color: #ffffff;
  font-size: 7px;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.item .item-cover .cover-sold {
  font-size: 20px;
  position: absolute;
  left: 50%;
  top: 50%;
  white-space: nowrap;
  transform: translate(-50%, -50%) rotate(45deg);
}

.item .item-img {
  width: 200rpx;
  height: 200rpx;
}

.item-price {
  width: 100%;
  padding: 0 20rpx;
  color: #ff0000;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.item-name {
  width: 100%;
  padding: 0 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: center;
  font-weight: bold;
  font-size: 30rpx;
}

.item-price .number {
  display: flex;
  align-items: center;
}

.number-action{
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.number-action image {
  width: 30rpx;
  height: 30rpx;
}

.item-price .number text {
  margin: 0 12rpx;
}

