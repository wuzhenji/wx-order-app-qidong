.editaddress {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #ffffff;
}

.editaddress-head{
  width: 100%;
  background: #ffffff;
}

.editaddress-head .head-name{
  width: 100%;
  height: 44px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.editaddress-head .head-name image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 20rpx;
}

.editaddress-head .head-name text {
  font-weight: bold;
  font-size: 16px;
}

.editaddress-content{
  flex: 1;
  overflow: hidden;
  overflow-y: scroll;
  padding: 20px 0;
}

.line{
  padding: 0 10px;
}

.line .line-title{
  font-size: 14px;
  font-weight: bold;
  line-height: 30px;
}

.line .line-input{
  height: 30px;
  border-bottom: 1px solid #ccc;
  display: flex;
  align-items: center;
}

.line .line-input input{
  width: 100%;
}

.line .line-input .contact{
  width: 70%;
}

.line .line-input .sex{
  width: 40%;
}

.sex-group{
  display: flex;
  transform:scale(0.8);
}

.sex-group label{
  margin: 0 5px;
  display: flex;
}

.sex-group label text{
  width: 40px;
}

.save{
  width: 80%;
  height: 40px;
  margin: 20px auto 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 18px;
  color: #ffffff;
  background: #1a7af8;
  border-radius: 4px;
}