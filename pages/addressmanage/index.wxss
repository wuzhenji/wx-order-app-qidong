.address {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #ffffff;
}

.address-head{
  width: 100%;
  background: #ffffff;
  border-bottom: 1px solid #ccc;
}

.address-head .head-name{
  width: 100%;
  height: 44px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.address-head .head-name image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 20rpx;
}

.address-head .head-name text {
  font-weight: bold;
  font-size: 16px;
}

.address-content{
  width: 100%;
  flex: 1;
  overflow: hidden;
  overflow-y: scroll;
  padding-bottom: 40px;
}

.item{
  width: 100%;
  height: 60px;
  border-bottom: 1px solid #ccc;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.item .item-con{
  width: 100%;
  height: 60px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 10px;
}

.item .item-con view{
  color: #999999;
}

.item .item-con text{
  max-width: 250px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.item .item-con a{
  margin-left: 10px;
}

.address-bottom{
  width: 100%;
  height: 40px;
  background: #ffffff;
  border-top: 1px solid #ccc;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333333;
  font-size: 16px;
}